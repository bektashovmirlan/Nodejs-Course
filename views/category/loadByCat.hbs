{{# each products }}
<div class="container">
  <div class="row">
      <div class="col-xs-12 col-sm-6 col-md-3">
            <div class="col-item" style="margin-top: 40px">
                <div class="post-img-content">
                    <img src="{{ this.image }}" class="img-responsive" />
                </div>
                <div class="info">
                    <div class="row">
                        <div class="price col-md-6">
                            <h5> {{ this.title }}</h5>
                        </div>
                        <div class="rating hidden-sm col-md-6">
                            <h5 class="price-text-color">$ {{ this.price }}</h5>
                        </div>
                    </div>
                    <div class="separator clear-left">
                        <p class="btn-add">
                            <i class="fa fa-shopping-cart"></i><a href="#" class="hidden-sm">Add to cart</a></p>
                        <p class="btn-details">
                            <i class="fa fa-list"></i><a href="#" class="hidden-sm">More details</a></p>
                    </div>
                    <div class="clearfix">
                    </div>
                </div>
            </div>
        </div>
  </div>
</div>
{{/each}}


